# =============================================================================
# KP5 Academy Web Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local files to version control!

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME="KP5 Academy"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3002/ws

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=true
NEXT_PUBLIC_PHONE_AUTH_ENABLED=true

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# FIREBASE CONFIGURATION (if using Firebase)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# =============================================================================
# STRIPE CONFIGURATION (for payments)
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_CURRENCY=usd
NEXT_PUBLIC_STRIPE_LOCALE=en

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# MAPS AND LOCATION SERVICES
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
NEXT_PUBLIC_UPLOAD_ENDPOINT=http://localhost:3001/api/upload

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_LIVE_MATCHES=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# SOCIAL MEDIA AND SHARING
# =============================================================================
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_TWITTER_CREATOR=@your-twitter-handle
NEXT_PUBLIC_LINKEDIN_COMPANY_ID=your-linkedin-company-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
NEXT_PUBLIC_SENDGRID_API_KEY=your-sendgrid-api-key
NEXT_PUBLIC_TWILIO_ACCOUNT_SID=your-twilio-account-sid
NEXT_PUBLIC_TWILIO_AUTH_TOKEN=your-twilio-auth-token

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# =============================================================================
# MOBILE APP INTEGRATION
# =============================================================================
NEXT_PUBLIC_MOBILE_APP_URL=exp://localhost:19000
NEXT_PUBLIC_DEEP_LINK_SCHEME=kp5academy

# =============================================================================
# SEO AND META TAGS
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3003
NEXT_PUBLIC_SITE_NAME="KP5 Academy"
NEXT_PUBLIC_SITE_DESCRIPTION="Comprehensive sports management platform"
NEXT_PUBLIC_SITE_KEYWORDS=sports,management,academy,football,soccer

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TEST_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_TEST_USER_EMAIL=test@example.com
NEXT_PUBLIC_TEST_USER_PASSWORD=testpassword123 