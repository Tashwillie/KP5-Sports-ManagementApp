# =============================================================================
# KP5 Academy Mobile App Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================
EXPO_PUBLIC_APP_NAME="KP5 Academy"
EXPO_PUBLIC_APP_VERSION="1.0.0"
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_SCHEME=kp5academy

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
EXPO_PUBLIC_API_BASE_URL=http://localhost:3001
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_WEBSOCKET_URL=ws://localhost:3002/ws

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
EXPO_PUBLIC_AUTH_ENABLED=true
EXPO_PUBLIC_GOOGLE_OAUTH_ENABLED=true
EXPO_PUBLIC_PHONE_AUTH_ENABLED=true
EXPO_PUBLIC_BIOMETRIC_AUTH_ENABLED=true

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=your-google-client-secret
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# =============================================================================
# FIREBASE CONFIGURATION (if using Firebase)
# =============================================================================
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:android:abcdef123456

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
EXPO_PUBLIC_PUSH_ENABLED=true
EXPO_PUBLIC_PUSH_PROJECT_ID=your-expo-push-project-id
EXPO_PUBLIC_PUSH_ACCESS_TOKEN=your-expo-push-access-token

# =============================================================================
# STRIPE CONFIGURATION (for payments)
# =============================================================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
EXPO_PUBLIC_STRIPE_CURRENCY=usd
EXPO_PUBLIC_STRIPE_LOCALE=en

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
EXPO_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key

# =============================================================================
# MAPS AND LOCATION SERVICES
# =============================================================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
EXPO_PUBLIC_LOCATION_ENABLED=true
EXPO_PUBLIC_GEOFENCING_ENABLED=true

# =============================================================================
# FILE UPLOAD AND STORAGE
# =============================================================================
EXPO_PUBLIC_MAX_FILE_SIZE=10485760
EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
EXPO_PUBLIC_UPLOAD_ENDPOINT=http://localhost:3001/api/upload
EXPO_PUBLIC_CLOUD_STORAGE_URL=https://your-storage-bucket.s3.amazonaws.com

# =============================================================================
# CAMERA AND MEDIA FEATURES
# =============================================================================
EXPO_PUBLIC_CAMERA_ENABLED=true
EXPO_PUBLIC_IMAGE_PICKER_ENABLED=true
EXPO_PUBLIC_VIDEO_RECORDING_ENABLED=true
EXPO_PUBLIC_QR_CODE_SCANNING_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
EXPO_PUBLIC_ENABLE_LIVE_MATCHES=true
EXPO_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_BACKGROUND_SYNC=true
EXPO_PUBLIC_ENABLE_LOCATION_TRACKING=true

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_ENABLE_ERROR_TRACKING=true
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=true

# =============================================================================
# SOCIAL MEDIA AND SHARING
# =============================================================================
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
EXPO_PUBLIC_TWITTER_CREATOR=@your-twitter-handle
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your-instagram-client-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
EXPO_PUBLIC_SENDGRID_API_KEY=your-sendgrid-api-key
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=your-twilio-account-sid
EXPO_PUBLIC_TWILIO_AUTH_TOKEN=your-twilio-auth-token

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_SHOW_DEV_MENU=true
EXPO_PUBLIC_MOCK_API=false

# =============================================================================
# WEB APP INTEGRATION
# =============================================================================
EXPO_PUBLIC_WEB_APP_URL=http://localhost:3003
EXPO_PUBLIC_DEEP_LINK_SCHEME=kp5academy
EXPO_PUBLIC_UNIVERSAL_LINK=https://your-domain.com

# =============================================================================
# OFFLINE AND CACHING
# =============================================================================
EXPO_PUBLIC_OFFLINE_CACHE_SIZE=100
EXPO_PUBLIC_OFFLINE_SYNC_INTERVAL=300000
EXPO_PUBLIC_OFFLINE_DATA_RETENTION_DAYS=30

# =============================================================================
# SECURITY AND PRIVACY
# =============================================================================
EXPO_PUBLIC_ENCRYPTION_ENABLED=true
EXPO_PUBLIC_BIOMETRIC_AUTH_REQUIRED=false
EXPO_PUBLIC_APP_LOCK_ENABLED=false
EXPO_PUBLIC_DATA_PRIVACY_ENABLED=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
EXPO_PUBLIC_TEST_MODE=false
EXPO_PUBLIC_TEST_USER_EMAIL=test@example.com
EXPO_PUBLIC_TEST_USER_PASSWORD=testpassword123
EXPO_PUBLIC_MOCK_LOCATION=40.7128,-74.0060

# =============================================================================
# BUILD AND DEPLOYMENT
# =============================================================================
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_BUILD_DATE=2024-01-01
EXPO_PUBLIC_DISTRIBUTION_CHANNEL=development 