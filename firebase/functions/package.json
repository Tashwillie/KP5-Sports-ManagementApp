{
  "name": "kp5-academy-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for KP5 Academy Sports Management Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
