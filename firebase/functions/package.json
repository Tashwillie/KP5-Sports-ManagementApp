    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "stripe": "^14.0.0",
    "nodemailer": "^6.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "axios": "^1.6.0",
    "twilio": "^4.19.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.0"
