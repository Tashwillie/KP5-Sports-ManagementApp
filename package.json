{
  "name": "kp5-academy-sports-management",
  "version": "1.0.0",
  "description": "Full-featured sports management system with web and mobile applications",
  "private": true,
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup": "npm install && cd web && npm install && cd ../mobile && npm install && cd ../shared && npm install",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "clean": "rm -rf web/.next web/out mobile/.expo mobile/dist",
    "reset": "npm run clean && npm run setup"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
